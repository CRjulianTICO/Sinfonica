@model Sinfonica.Web.Areas.Admin.Models.CostosViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

    <div class="container">
        <h2>Costos <small></small></h2>
        <ul class="responsive-table">
            <li class="table-header">
                <div class="col col-1">Costo de Matricula</div>
                <div class="col col-2">Costo Primer Semestre</div>
                <div class="col col-3">Fecha Limite Primer Semestre</div>
                <div class="col col-4">Costo Segundo Semestre</div>
                <div class="col col-4">Fecha Limite Segundo Semestre</div>
                <div class="col col-4">Programa</div>
            </li>
            <li class="table-row">
                <div class="col col-1" data-label="Matricula">@Html.DisplayFor(model => model.Matricula)</div>
                <div class="col col-2" data-label="Customer Name">@Html.DisplayFor(model => model.Costo1Semestre)</div>
                <div class="col col-3" data-label="Amount">$350</div>
                <div class="col col-4" data-label="Payment Status">Pending</div>
                <div class="col col-4" data-label="Payment Status">Pending</div>
                <div class="col col-4" data-label="Payment Status">Pending</div>
            </li>
          
        </ul>
    </div>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Costo de Matricula</th>
                <th>Costo Primer Semestre</th>
                <th>Fecha Limite Primer Semestre</th>
                <th>Costo Segundo Semestre</th>
                <th>Fecha Limite Segundo Semestre</th>
                <th>Programa</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Matricula)</td>
                <td>@Html.DisplayFor(model => model.Costo1Semestre)</td>
                <td>@Html.DisplayFor(model => model.FechaLim1Sem)</td>
                <td>@Html.DisplayNameFor(model => model.Costo2Semestre)</td>
                <td>@Html.DisplayFor(model => model.FechaLim2Sem)</td>
                <td>@Html.DisplayFor(model => model.Programas.Nombre)</td>
            </tr>
        </tbody>
    </table>
</div>


<h2 style="color: #000;">Informacion</h2>


<p class="news_post_text" style="margin-top: 59px;">

    @Html.DisplayFor(model => model.Informacion)

</p>
