@model Sinfonica.Web.Areas.Admin.Models.ProfesorCursoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>ProfesorCurso</h4>
<hr />
@{
    <h3>Usted esta editando para el profesor: @ViewBag.ProfesorNombre el cual tiene asigando el curso: @ViewBag.CursosNombre </h3>
}
<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProfesorsId" class="control-label"></label>
                <select asp-for="ProfesorsId" asp-items="Model.Profesores" class="form-control"></select>
                <span asp-validation-for="ProfesorsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CursossId" class="control-label"></label>
                <select asp-for="CursossId" asp-items="Model.Cursoss" class="form-control"></select>
                <span asp-validation-for="CursossId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
