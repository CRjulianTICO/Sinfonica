@model IEnumerable<Sinfonica.Web.Areas.Admin.Data.Entities.Costo>

@{
    ViewData["Title"] = "Index";
}

<section class="content-header">
    <h1>
        Costos
        <small>Ver todo</small>
    </h1>

</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Todos los datos</h3>
                    <a class="btn btn-primary pull-right" asp-action="Create"><i class="fa fa-plus"></i> Agregar</a>
                </div>

                <table id="datatable" class="display responsive nowrap dataTable no-footer dtr-inline collapsed table table-bordered table-striped">
                   <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Costo1Semestre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo2Semestre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaLim1Sem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaLim2Sem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Informacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Costo1Semestre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Costo2Semestre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaLim1Sem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaLim2Sem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Programas.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Informacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
                </table>

            </div>
        </div>

    </div>
</section>


