@model Sinfonica.Web.Areas.Admin.Models.ProfesorCursoViewModel

@{
    ViewData["Title"] = "Edit";
}



    <section class="content-header">
        <h1>
            Cursos - Profesores
            <small><h3>Usted esta editando para el profesor: @ViewBag.ProfesorNombre el cual tiene asigando el curso: @ViewBag.CursosNombre </h3></small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-action="Index"><i class="fa fa-arrow-left"></i> Regresar</a></li>
        </ol>
    </section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Ingresar Datos</h3>
                </div>
                <div class="box-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ProfesorsId" class="control-label"></label>
                            <select asp-for="ProfesorsId" asp-items="Model.Profesores" class="form-control"></select>
                            <span asp-validation-for="ProfesorsId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CursossId" class="control-label"></label>
                            <select asp-for="CursossId" asp-items="Model.Cursoss" class="form-control"></select>
                            <span asp-validation-for="CursossId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Editar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
